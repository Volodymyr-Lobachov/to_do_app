<%=simple_form_for [@user, @project, @task], :html => { :class => 'form-horizontal' } do |f| %> 
  <%= f.input :project_id %>
  <%= f.input :name %>
  <%= f.input :status %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), user_project_tasks_path(@user, @project), :class => 'btn' %>
  </div>
<% end %>
